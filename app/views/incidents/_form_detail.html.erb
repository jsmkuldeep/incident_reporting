<%= form_with(model: incident, local: true) do |form| %>
  <% if incident.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(incident.errors.count, "error") %> prohibited this incident from being saved:</h2>

      <ul>
      <% incident.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="field">
 <h4>Lincoln High School</h4>
    <p>Lincoln High School</p>
  </div>
  <div class="field">
    <%= form.label :incident_type_id, "Type of Incident" %>
    <%= form.collection_select :incident_type_id, @incident_types,:id,:title, include_blank: true %>
  </div>
  
  <h3>Your details</h3>
  <div class="field">
    <%= form.label :user_name,"Name" %>
    <%= form.text_field :user_name%>
  </div>
  <div class="field">
    <%= form.label :user_phone_or_email,"Email/ Phone" %>
    <%= form.text_field :user_phone_or_email%>
  </div>
    <div class="field">
    <%= form.label :user_role %>
    <%= form.select :user_role, ['student', 'teacher','other staff','parent','community member']%>
  </div>
  
   <div class="field">
    <%= form.label :people,"People involved" %>
    <%= form.text_field :people, placeholder: "Name and other details of people involved (student, teacher, staff, parent, 
grade level)"%>
  </div>
  
  <div class="field">
    <%= form.label :other_observers,"Other observers if any" %>
    <%= form.text_field :other_observers, placeholder: "Name and details"%>
  </div>
  
  <div class="field">
    <%= form.label :date_time_observed,"Date/ Time observed" %>
    <%= form.text_field :date_time_observed%>
  </div>
  
  <div class="field">
    <%= form.label :location %>
    <%= form.select :location, ['On school campuses and grounds', 'During transportation to and from school','At school-sponsored events','More details']%>
  </div>
  
   <div class="field">
    <%= form.label :description,"Describe issue/incident" %>
    <%= form.text_area :description, cols: 60, rows: 15 %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
